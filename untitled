def shuffle(array)

  array_new = []
  
  array.each do |num|
    rand_num = rand(array.last)-1
    array_new << rand_num unless array_new.inclued?(rand_num)
  end
  # escribe el algoritmo que revuelva un array
end


# Driver code:
array = (1..15).to_a

# # Esto no deberÃ¡ arrojar una excepciÃ³n
# 10.times do |variable|
#     raise "No esta revolviendo bien" if shuffle(array) == shuffle(array)
# end
# p true

p shuffle(array)